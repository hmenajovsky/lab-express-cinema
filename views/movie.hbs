<div class="container">
	<div class="card">
        <div class="row row-cols-lg-2 row-cols-md-2 row-cols-sm-1">
            <div class="col">
                <img class="img-fluid" src={{movie.image}} alt={{movie.image}} />
            </div>
            <div class="col">
                <a href="/movies">Go back</a>
                <h2> {{movie.title}}</h2>
                <h3>Director: {{movie.director}}</h3>
                <p class="stars">stars</p>
                <ul>
                    {{#each movie.stars}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p>{{movie.description}}</p>
                <p>         
                {{#each movie.showtimes}}
                    <span>{{this}}</span>
                    {{#unless @last}}
                    <span> |</span>
                    {{/unless}}
                {{/each}}
                </p>
            </div>
         </div>
	</div>
</div>